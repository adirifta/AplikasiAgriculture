<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/abu_abu2"
    tools:context=".AnalisaData">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Rain Detection"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textColor="@color/abu_abu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/IntensitasCahaya"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:textColor="@color/abu_abu"
        android:textColorHint="@color/abu_abu1"
        android:hint="IntensitasCahaya"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/KelembapanRuangan"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:textColor="@color/abu_abu"
        android:textColorHint="@color/abu_abu1"
        android:hint="KelembapanRuangan"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/IntensitasCahaya"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/SuhuRuangan"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:textColor="@color/abu_abu"
        android:textColorHint="@color/abu_abu1"
        android:hint="SuhuRuangan"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/KelembapanRuangan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/Status"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Status"
        android:textColor="@color/white"
        android:backgroundTint="@color/abu_abu"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/SuhuRuangan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="50sp"
        android:textColor="@color/abu_abu"
        android:textAlignment="center"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@id/Status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
